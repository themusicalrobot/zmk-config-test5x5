#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        
        // Layer 0 - Default Layer
        default_layer {
            bindings = <
                &tog 0    &tog 1    &tog 2    &tog 3    &mo 4
                &lsft &kp 7   &kp 8   &kp 9   &kp DEL
                &kp ENT  &kp 4   &kp 5   &kp 6   &kp SLASH
                &kp DOT &kp 1   &kp 2   &kp 3   &kp ASTERISK
                &kp PLUS &kp EQUAL &kp 0   &kp MINUS &kp PERCENT
            >;
        };

        // Layer 1 - Symbols and Brackets (Coding)
        layer1 {
            bindings = <
                &tog 0    &tog 1    &tog 2    &tog 3    &mo 4
                &kp 1   &kp 2   &kp 3   &kp 4  &kp 5 
                &kp LEFT &kp RIGHT &kp UP &kp DOWN &kp SHIFT+9
                &kp LBRACKET &kp RBRACKET &kp LCBRACE &kp RCBRACE &kp SHIFT+0
                &kp PIPE &kp SEMICOLON &kp COLON &kp BACKSLASH &kp SHIFT+8
            >;
        };

        // Layer 2 - Solidworks Shortcuts
        layer2 {
            bindings = <
                &tog 0    &tog 1    &tog 2    &tog 3    &mo 4
                &kp F1  &kp F2  &kp F3  &kp F4  &kp F5 
                &kp CTRL &kp ALT &kp SHIFT &kp TAB  &kp ESC 
                &kp Z   &kp Y   &kp X   &kp C &none
                &kp ESC &kp ENTER &kp DELETE &kp P &none
            >;
        };

        // Layer 3 - Figma and QtDesigner Shortcuts
        layer3 {
            bindings = <
                &tog 0    &tog 1    &tog 2    &tog 3    &mo 4
                &kp F5  &kp F6  &kp F7  &kp F8 &none
                &kp CTRL &kp SHIFT &kp ALT &kp H &none
                &kp Q   &kp W   &kp E   &kp R &none
                &kp S   &kp T   &kp U   &kp V &none
            >;
        };

        // Layer 4 - BluetoothCtrl
        layer4 {
            bindings = <
                &tog 0    &tog 1    &tog 2    &tog 3    &none
                &none  &none  &none  &none &none
                &none &none &none &none &none
                &none  &none   &none  &none &none
                &BT_CLR   &BT_SEL 0   &BT_SEL 1   &BT_SEL 2 &bootloader
            >;
        };
    };
};
